<% layout("/layouts/boilerplate") %>
    <!-- Main row containing the form for creating a new listing -->
    <div class="row mt-3">
        <!-- Column to center the form on the page -->
        <div class="col-sm-8 offset-sm-2 px-3">
            <br>
            <h3 class="mb-3">Create a new listing</h3>
            <!-- Form for creating a new listing -->
            <form method="post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
                
                <!-- Title input field -->
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" class="form-control" name="listing[title]" placeholder="enter title" required>
                    <div class="valid-feedback">Title looks good!</div>
                </div>

                <!-- Description input field -->
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea type="text" class="form-control" name="listing[description]" placeholder="enter description" required></textarea>
                    <div class="invalid-feedback">Please enter a short description</div>
                </div>

                <!-- Image upload field -->
                <div class="mb-3">
                    <label for="image" class="form-label">Upload Listing Image</label>
                    <input type="file" class="form-control" name="listing[image]" required>
                </div>

                <!-- Category selection dropdown -->
                <div class="mb-3">
                    <label for="validationCustom04" class="form-label">Category</label>
                    <select class="form-select" id="validationCustom04" name="listing[category]" required>
                        <option selected disabled value="">Select a category</option>
                        <option value="Rooms">Rooms</option>
                        <option value="Iconic cities">Iconic cities</option>
                        <option value="Mountains">Mountains</option>
                        <option value="Castles">Castles</option>
                        <option value="Amazing pools">Amazing pools</option>
                        <option value="Camping">Camping</option>
                        <option value="Farms">Farms</option>
                        <option value="Arctic">Arctic</option>
                        <option value="Domes">Domes</option>
                        <option value="Boats">Boats</option>
                    </select>
                    <div class="invalid-feedback">Please select a valid category.</div>
                </div>

                <!-- Row for price and country fields -->
                <div class="row">
                    <!-- Price input field -->
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Price</label>
                        <input type="number" class="form-control" name="listing[price]" placeholder="enter price" required>
                        <div class="invalid-feedback">Please enter a valid price</div>
                    </div>

                    <!-- Country input field -->
                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-label">Country</label>
                        <input type="text" class="form-control" name="listing[country]" placeholder="enter country" required>
                        <div class="invalid-feedback">Country name should be valid</div>
                    </div>
                </div>

                <!-- Location input field -->
                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input type="text" class="form-control" name="listing[location]" placeholder="enter location" required>
                    <div class="invalid-feedback">Location should be valid</div>
                </div>

                <!-- Submit button -->
                <button class="btn edit-btn mt-3">Add</button>
                <br><br>
            </form>
        </div>
    </div>
